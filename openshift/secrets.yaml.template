# Template for creating secrets in OpenShift
# DO NOT commit actual secrets to version control!
#
# To create the secret, run:
# oc create secret generic nc-ask-secrets \
#   --from-literal=SUPABASE_URL='your-supabase-url' \
#   --from-literal=SUPABASE_ANON_KEY='your-anon-key' \
#   --from-literal=SUPABASE_SERVICE_ROLE_KEY='your-service-role-key' \
#   --from-literal=GOOGLE_API_KEY='your-gemini-api-key' \
#   --from-literal=SECRET_KEY='your-random-secret-key'
#
# Or apply this file after filling in base64-encoded values:
# echo -n "your-value" | base64
# oc apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: nc-ask-secrets
  labels:
    app: nc-ask
type: Opaque
data:
  # Base64-encoded values (use: echo -n "value" | base64)
  # Replace these with your actual base64-encoded values
  SUPABASE_URL: "REPLACE_WITH_BASE64_ENCODED_VALUE"
  SUPABASE_ANON_KEY: "REPLACE_WITH_BASE64_ENCODED_VALUE"
  SUPABASE_SERVICE_ROLE_KEY: "REPLACE_WITH_BASE64_ENCODED_VALUE"
  GOOGLE_API_KEY: "REPLACE_WITH_BASE64_ENCODED_VALUE"
  SECRET_KEY: "REPLACE_WITH_BASE64_ENCODED_VALUE"
