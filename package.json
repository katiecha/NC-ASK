{
  "name": "nc-ask",
  "version": "1.0.0",
  "description": "NC ASK - Educational platform for autism-related information",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgGreen.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn main:app --reload",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "typecheck": "cd frontend && npm run typecheck",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && python -m ruff check .",
    "test": "cd frontend && npm run test",
    "test:ui": "cd frontend && npm run test:ui",
    "test:coverage": "cd frontend && npm run test:coverage",
    "promptfoo": "npx promptfoo eval --config backend/tests/promptfoo/promptfoo-tests.yaml",
    "promptfoo:view": "npx promptfoo view",
    "evaluate:ragas": "cd backend/tests/evaluation && python run_evaluation.py --basic",
    "evaluate:ragas:comprehensive": "cd backend/tests/evaluation && python run_evaluation.py --comprehensive",
    "evaluate:ragas:report": "cd backend/tests/evaluation && python generate_report.py"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "promptfoo": "^0.119.4"
  }
}
